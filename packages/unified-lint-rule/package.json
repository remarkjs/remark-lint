{
  "name": "unified-lint-rule",
  "version": "2.0.0",
  "description": "unified plugin to make it a bit easier to create linting rules",
  "license": "MIT",
  "keywords": [
    "unified",
    "unified-plugin",
    "plugin",
    "lint",
    "rule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkjs/remark-lint",
    "directory": "packages/unified-lint-rule"
  },
  "bugs": "https://github.com/remarkjs/remark-lint/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/unist": "^2.0.0",
    "trough": "^2.0.0",
    "unified": "^10.0.0",
    "vfile": "^5.0.0"
  },
  "scripts": {
    "build": "rimraf \"lib/**/*.d.ts\" && tsc && type-coverage"
  },
  "xo": false,
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  }
}
