    "chalk": "^3.0.0",
    "dox": "^0.9.0",
    "lerna": "^3.0.0",
    "mdast-zone": "^4.0.0",
    "nyc": "^15.0.0",
    "parse-author": "^2.0.0",
    "prettier": "^2.0.0",
    "remark": "^11.0.0",
    "remark-cli": "^7.0.0",
    "remark-comment-config": "^5.0.0",
    "remark-github": "^9.0.0",
    "remark-toc": "^7.0.0",
    "remark-validate-links": "^10.0.0",
    "strip-indent": "^3.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "to-vfile": "^6.0.0",
    "trim": "0.0.1",
    "unist-builder": "^2.0.0",
    "unist-util-remove-position": "^2.0.0",
    "vfile-reporter": "^6.0.0",
    "xo": "^0.28.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "generate:presets": "node script/build-presets",
    "generate:rules": "node script/build-rules",
    "generate": "npm run generate:presets && npm run generate:rules",
    "build:bundle": "browserify packages/remark-lint -s remarkLint > remark-lint.js",
    "build:mangle": "browserify packages/remark-lint -s remarkLint -p tinyify > remark-lint.min.js",
    "build": "npm run build:bundle && npm run build:mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run generate && npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/string-content": "off",
      "unicorn/prefer-includes": "off",
      "guard-for-in": "off",
      "no-eq-null": "off",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ]
    },
    "ignores": [
      "remark-lint.js"
    ]
  }
}
