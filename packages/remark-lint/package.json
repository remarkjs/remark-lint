{
  "name": "remark-lint",
  "version": "10.0.0",
  "description": "remark plugin to lint Markdown code style",
  "license": "MIT",
  "keywords": [
    "lint",
    "markdown",
    "mdast",
    "plugin",
    "remark",
    "remark-lint",
    "remark-plugin",
    "unified",
    "validate"
  ],
  "repository": "https://github.com/remarkjs/remark-lint/tree/main/packages/remark-lint",
  "bugs": "https://github.com/remarkjs/remark-lint/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": "./index.js",
  "files": [
    "index.d.ts",
    "index.d.ts.map",
    "index.js"
  ],
  "dependencies": {
    "@types/mdast": "^4.0.0",
    "remark-message-control": "^8.0.0",
    "unified": "^11.0.0"
  },
  "scripts": {},
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "capitalized-comments": "off"
    }
  }
}
