    "prettier": "^3.0.0",
    "remark": "^15.0.0",
    "remark-cli": "^12.0.0",
    "remark-comment-config": "^8.0.0",
    "remark-gfm": "^4.0.0",
    "remark-github": "^12.0.0",
    "remark-toc": "^9.0.0",
    "remark-validate-links": "^13.0.0",
    "strip-indent": "^4.0.0",
    "to-vfile": "^8.0.0",
