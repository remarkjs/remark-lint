{
  "compilerOptions": {
    "checkJs": true,
    "customConditions": ["development"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["dom", "es2022"],
    "module": "node16",
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["**/coverage/", "**/node_modules/"],
  "include": ["**/*.js"]
}
