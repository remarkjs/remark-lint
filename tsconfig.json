{
  "include": ["**/*.js"],
  "exclude": ["**/coverage/", "**/node_modules/"],
  "compilerOptions": {
    "customConditions": ["development"],
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "node16",
    "newLine": "lf",
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true
  }
}
